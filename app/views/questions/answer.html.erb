<div class="container">

  <h1>Stupid coach</h1>
  <div class="alert alert-light" role="alert">
    <p>
      <strong>
        <%= @question%>
      </strong>
    </p>
    <p><i>-You</i></p>
  </div>

  <div class="alert alert-warning" role="alert">
    <p>
      <strong>
        <%= @answer %>
      </strong>
    </p>
    <p><i>-Your coach</i></p>
  </div>

  <%= link_to 'Ask a new question', ask_path %>
</div>
